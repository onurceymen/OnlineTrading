@model MainMVC.ViewModels.ProductViewModel.CommentViewModel

@{
    ViewData["Title"] = "Add Comment";
}

<h1>Add Comment</h1>

<form asp-action="AddComment" method="post">
    <div class="form-group">
        <label for="UserName">User Name:</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Content">Content:</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="StarCount">Star Count:</label>
        <input asp-for="StarCount" type="number" class="form-control" />
        <span asp-validation-for="StarCount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ProductId">Product Id:</label>
        <input asp-for="ProductId" type="number" class="form-control" />
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
